<style type="text/css">
html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
html {
  display: table;
}
body {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}
</style>


<h1>ログイン画面</h1>
<%= form_tag top_login_path, method: :post do %>
<p>
  <%= label_tag :uid, 'アカウント' %> 
  <%= text_field_tag :uid %> 
</p>
<p>
  <%= label_tag :pass, 'パスワード' %> 
  <%= password_field_tag :pass %> 
</p>
  <%= submit_tag 'ログイン' %>
<% end %>