<style type="text/css">
html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
html {
  display: table;
}
body {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}
</style>

<h1>アカウント作成</h1>
<%= form_for @user, url: {action: :create} do |f| %>
  <p>
  <%= f.label :uid, 'アカウント' %> 
  <%= f.text_field :uid %> 
  </p>
  <p>
  <%= f.label :password, 'パスワード' %> 
  <%= f.password_field :password %> 
  </p>
  
  <%= f.submit '登録' %>
  
  <p>
  <%= link_to 'ログインする', top_main_path %>
  </p>
<% end %>